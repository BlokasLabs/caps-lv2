@prefix doap: <http://usefulinc.com/ns/doap#> .
@prefix foaf: <http://xmlns.com/foaf/0.1/> .
@prefix lv2: <http://lv2plug.in/ns/lv2core#> .
@prefix mod: <http://portalmod.com/ns/modgui#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .

<http://portalmod.com/plugins/caps/Click> a lv2:Plugin,
        lv2:UtilityPlugin;
    lv2:microVersion 16;
    lv2:minorVersion 9;
    lv2:optionalFeature lv2:hardRtCapable;

rdfs:comment """
A sample-accurate metronome. Two simplistic modal synthesis models are available for the click: box is a small wooden box struck with a soft wooden mallet, stick a scratchy stick hit. In addition, there's also a very synthetic beep, and finally dirac, a very nasty single-sample pulse of 0 dB amplitude and little immediate musical use. 
All click sounds are synthesised once when the plugin is loaded and then played back from memory. 

source: http://quitte.de/dsp/caps.html#Click
""";

    lv2:port [ a lv2:ControlPort,
                lv2:InputPort;
            lv2:default 1;
            lv2:index 0;
            lv2:maximum 2;
            lv2:minimum 0;
            lv2:name "Model";
            lv2:portProperty lv2:integer;
            lv2:scalePoint [ rdfs:label "box";
                    rdf:value 0 ],
                [ rdfs:label "stick";
                    rdf:value 1 ],
                [ rdfs:label "beep";
                    rdf:value 2 ],
                [ rdfs:label "dirac";
                    rdf:value 3 ];
            lv2:symbol "model" ],
        [ a lv2:ControlPort,
                lv2:InputPort;
            lv2:default 63.0;
            lv2:index 1;
            lv2:maximum 240;
            lv2:minimum 4;
            lv2:name "bpm";
            lv2:symbol "bpm" ],
        [ a lv2:ControlPort,
                lv2:InputPort;
            lv2:default 0.750;
            lv2:index 2;
            lv2:maximum 1;
            lv2:minimum 0;
            lv2:name "volume";
            lv2:symbol "volume" ],
        [ a lv2:ControlPort,
                lv2:InputPort;
            lv2:default 0.750;
            lv2:index 3;
            lv2:maximum 1;
            lv2:minimum 0;
            lv2:name "damping";
            lv2:symbol "damping" ],
        [ a lv2:AudioPort,
                lv2:OutputPort;
            lv2:index 4;
            lv2:name "out";
            lv2:symbol "out" ];
    mod:gui [ mod:iconTemplate <modgui/Click.html>;
            mod:resourcesDirectory <modgui>;
            mod:screenshot <modgui/Click.png>;
            mod:templateData <modgui/Click.json>;
            mod:thumbnail <modgui/Click-thumb.png> ];
    doap:developer [ foaf:homepage <http://quitte.de/dsp/caps.html>;
            foaf:mbox <mailto:tim@quitte.de>;
            foaf:name "Tim Goetze" ];
    doap:license <http://usefulinc.com/doap/licenses/gpl>;
    doap:maintainer [ foaf:homepage <http://portalmod.com>;
            foaf:mbox <mailto:devel@portalmod.com>;
            foaf:name "MOD Team" ];
    doap:name "C* Click - Metronome" .

